<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="ShoppingMall.Dao.mapper.OrderMapper">
 
  <insert id="createOrder">
         insert into shoppingorder(id,user_id,address_id,pro_id,paymentMethod,ordertime,status)
         values(shoppingorder_seq.nextval,#{userId},#{addressId},#{proId},0,sysdate,0)
  </insert>
  
  <delete id="delCar">
             delete from shoppingcar where pro_id = #{proId}
  </delete>
   
</mapper>